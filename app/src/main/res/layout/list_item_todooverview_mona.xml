<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/todo_listview_item_style"
    android:layout_margin="10dp"
    android:orientation="vertical"
    android:descendantFocusability="blocksDescendants"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal"
        android:id="@+id/linearLayout_title_buttonDelete"
        android:gravity="center_horizontal"
        android:padding="@dimen/listview_padding"
        >

<!--        <TextView
            android:id="@+id/listviewitem_textview_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="@dimen/textsize_title"
            android:text="Titel"
            android:textStyle="bold"
            android:gravity="center_horizontal"
            />-->
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="10">

        <TextView
            android:id="@+id/listviewitem_textview_title_todo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="@dimen/textsize_title"
            android:hint="Titel"
            android:textStyle="bold"
            android:gravity="start"
            />

    </RelativeLayout>

        <RelativeLayout
            android:id="@+id/RelativeLayoutButtonDeleteToDo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/linearLayout_dateTimeEnd"
            android:orientation="horizontal"
            android:padding="@dimen/listview_padding"
            android:layout_alignParentRight="true"
            android:layout_weight="0"
            >

            <ImageButton
                android:id="@+id/buttonDeleteToDo"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:backgroundTint="@color/colorRed"
                android:src="@android:drawable/ic_menu_close_clear_cancel"
                android:background="@drawable/round_button_style"
                android:focusable="false"

                />

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal"
        android:id="@+id/linearLayout_dateTime"
        android:layout_below="@id/linearLayout_title_buttonDelete"
        android:padding="@dimen/listview_padding"
        android:layout_marginTop="0dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <CheckBox
                android:id="@+id/todoCheckBox1"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textSize="@dimen/textsize_text"
                android:hint="Fenster putzen" />

            <CheckBox
                android:id="@+id/todoCheckBox"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textSize="@dimen/textsize_text"
                android:hint="Fenster putzen" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingRight="10dp">

                <TextView
                    android:id="@+id/todoDuedateText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:text="Status:"/>
                <TextView
                    android:id="@+id/todoStatusText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="FÃ¤llig am:" />

                <TextView
                    android:id="@+id/todoStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/todoStatusText"
                    android:text="x/100%"
                    android:textSize="6.5pt"/>

                <TextView
                    android:id="@+id/eventDateStart"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearance"
                    android:textSize="@dimen/textsize_text"
                    android:hint="Datum"
                    android:layout_weight="1"
                    android:gravity="start"
                    android:layout_below="@+id/todoDuedateText"
                    android:drawableStart="@android:drawable/ic_menu_today"
                    />

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>