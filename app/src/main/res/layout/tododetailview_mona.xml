<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"

    android:background="@drawable/todo_listview_item_style"
    android:padding="10dp"
    android:orientation="vertical">



    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/todotitle"
        android:textSize="12pt"
        android:textStyle="bold"
        android:hint="Titel"
        android:focusedByDefault="false"/>

    <ListView
        android:id="@+id/listview_todo_detailview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:divider="@drawable/listview_divider_blue"
        android:dividerHeight="5dp">

    </ListView>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/edittext_newTodo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Aufgabe eingeben"/>
        <Button
            android:id="@+id/button_newTodo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Aufgabe hinzufügen"
            android:layout_below="@id/edittext_newTodo"
            android:background="@color/colorBlueDark"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="50dp"
        android:paddingRight="10dp">

        <TextView
            android:id="@+id/todoDescriptionStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:text="Status:"/>
        <TextView
            android:id="@+id/todoDescriptionDuedate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fällig am:"/>

        <TextView
            android:id="@+id/tododetailviewStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/todoDescriptionStatus"
            android:text="x/100%"
            android:textSize="6.5pt"/>
        <EditText
            android:id="@+id/todoDetailviewDueDate"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearance"
            android:textSize="@dimen/textsize_text"
            android:hint="Datum"
            android:layout_weight="1"
            android:gravity="start"
            android:layout_below="@+id/todoDescriptionDuedate"
            android:drawableStart="@android:drawable/ic_menu_today"
            />

    </RelativeLayout>

</LinearLayout>
