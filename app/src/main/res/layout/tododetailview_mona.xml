<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"

    android:background="@drawable/todo_listview_item_style"
    android:orientation="vertical"
    android:padding="10dp">

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:errorEnabled="true"
        app:errorTextAppearance="@style/error_appearance"
        android:id="@+id/textinputLayout_todotitle">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/todotitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusedByDefault="false"
            android:hint="Titel"
            android:textSize="12pt"
            android:textStyle="bold"
            />
    </android.support.design.widget.TextInputLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textinputLayout_todotitle"
            android:paddingTop="0dp"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingEnd="10dp"
                android:orientation="horizontal"
                android:id="@+id/relativeLayout_duedate_and_status"
                >


                <LinearLayout
                    android:id="@+id/linearLayout_duedate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/todoDescriptionDuedate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Fällig am:" />


                    <Button
                        android:id="@+id/todoDetailviewButtonDueDate"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:background="@color/colorBlueDark"
                        android:drawableStart="@android:drawable/ic_menu_today"
                        android:gravity="center"
                        android:hint="Datum"
                        android:textSize="@dimen/textsize_text"
                        />
                </LinearLayout>
                <RelativeLayout
                    android:id="@+id/linearLayout_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="3">
                    <TextView
                        android:id="@+id/todoDescriptionStatus"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:text="Status:"/>

                    <TextView
                        android:id="@+id/tododetailviewStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_below="@+id/todoDescriptionStatus"
                        android:text="x/100%"
                        android:textSize="@dimen/textsize_text"
                        android:gravity="center"/>
                </RelativeLayout>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/relativeLayoutNewTodo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/relativeLayout_duedate_and_status"
                android:paddingTop="15dp"
                >
                <android.support.design.widget.TextInputEditText
                    android:id="@+id/edittext_newTodo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Aufgabe eingeben"
                    />
                <!--</android.support.design.widget.TextInputLayout>-->
                <Button
                    android:id="@+id/button_newTodo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/edittext_newTodo"
                    android:background="@color/colorBlueDark"
                    android:text="Aufgabe hinzufügen"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/relativeLayoutNewTodo"
                android:paddingTop="@dimen/listview_padding">
                <ListView
                    android:id="@+id/listview_todo_detailview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:divider="@drawable/listview_divider_blue"
                    android:dividerHeight="5dp"
                    android:padding="@dimen/listview_padding"
                    >
                </ListView>
            </RelativeLayout>
        </RelativeLayout>

</RelativeLayout>


