<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/listview_item_style"
    android:layout_margin="10dp">

<!--todo focus color ändern;-->
<!--todo margin erhöhen-> titel ist nicht mehr im Fenster-->

    <android.support.design.widget.TextInputLayout
        android:id="@+id/eventTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Silvesterparty"
            android:hint="Titel"
            android:gravity="left|top"
            android:inputType="textMultiLine" />

    </android.support.design.widget.TextInputLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/eventDateTimeSpan"
        android:layout_below="@id/eventTitle">

        <Button
            android:id="@+id/eventDate"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:layout_margin="5dp"
            android:gravity="center"
            android:drawableStart="@android:drawable/ic_menu_today"
            android:background="@color/colorBlue"
            android:text="Datum"/>


        <Button
            android:id="@+id/eventTime"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:layout_margin="5dp"
            android:layout_toEndOf="@id/eventDate"
            android:gravity="center"
            android:drawableStart="@android:drawable/ic_menu_recent_history"
            android:background="@color/colorBlue"
            android:text="Uhrzeit"/>

        <Button
            android:id="@+id/eventSpan"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:layout_toEndOf="@id/eventTime"
            android:drawableLeft="@android:drawable/ic_menu_rotate"
            android:gravity="center"
            android:background="@color/colorBlue"
            android:text="Dauer"/>
    </LinearLayout>



    <android.support.design.widget.TextInputLayout
        android:id="@+id/eventLocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/eventDateTimeSpan">

        <android.support.design.widget.TextInputEditText

            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:text="Monas Haus"
            android:hint="Ort"
            />

    </android.support.design.widget.TextInputLayout>



    <android.support.design.widget.TextInputLayout
        android:id="@+id/eventDiscription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/eventLocation">

        <android.support.design.widget.TextInputEditText

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Party bei Mona. Essen und Trinken mitbringen!"
            android:hint="Beschreibung"
            android:inputType="textMultiLine" />

    </android.support.design.widget.TextInputLayout>


</RelativeLayout>


