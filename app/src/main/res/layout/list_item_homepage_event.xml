<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/listview_item_style_events"
    android:orientation="vertical"
    android:id="@+id/idRelativeLayoutListItem"
    android:descendantFocusability="blocksDescendants"

    android:layout_margin="@dimen/listview_margin">

    <!--android:layout_margin="10dp"-->

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="10">

            <LinearLayout
                android:id="@+id/linearLayout_title_buttonDelete"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:layout_margin="@dimen/listview_margin">

                <TextView
                    android:id="@+id/homepage_event_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="start"
                    android:hint="Titel"
                    android:textAlignment="viewStart"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textSize="@dimen/textsize_title"
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/colorBlack"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/homepage_event_date"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_weight="1"
                            android:hint="Startdatum"
                            android:textColor="@color/colorBlack"/>

                        <TextView
                            android:id="@+id/homepage_event_time"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_weight="1"
                            android:hint="Startzeit"
                            android:textColor="@color/colorBlack"/>
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/RelativeLayoutButtonDeleteEvent"
            android:layout_width="36dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_below="@id/linearLayout_dateTimeEnd"
            android:layout_weight="0"
            android:orientation="horizontal"
            android:layout_margin="@dimen/listview_margin">

            <ImageButton
                android:id="@+id/homepage_buttonDeleteEvent"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:background="@drawable/round_button_style"
                android:backgroundTint="@color/colorRed"
                android:focusable="false"
                android:foregroundGravity="center_vertical|center_horizontal"
                android:src="@android:drawable/ic_menu_close_clear_cancel" />

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>
